<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KahramanDetaylari">

    <TextView
        android:id="@+id/lblHeroDetail_Description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="162dp"
        android:text="Kahraman Adı"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Kahraman Açıklaması"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/lblHeroDetail_Description"
        app:layout_constraintStart_toStartOf="@+id/lblHeroDetail_Description"
        app:layout_constraintTop_toBottomOf="@+id/lblHeroDetail_Name" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="7dp"
        android:text="Kahraman Adı"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/lblHeroDetail_Name"
        app:layout_constraintStart_toStartOf="@+id/lblHeroDetail_Name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblHeroDetail_Name"
        android:layout_width="375dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:text="Kahraman Adı"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>